<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarMain"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/purple_500"
        android:title="Photo Notes"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleCentered="true"/>

    <!-- Text Input for Filter -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filterInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cari catatan..."
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:layout_constraintTop_toBottomOf="@id/toolbarMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switchGrid"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Toggle Switch Grid/List -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid"
        app:layout_constraintTop_toTopOf="@id/filterInputLayout"
        app:layout_constraintBottom_toBottomOf="@id/filterInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Button ke Second -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Catatan"
        android:icon="@android:drawable/ic_menu_add"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Button ke Third -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnThird"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lihat Catatan"
        android:icon="@android:drawable/ic_menu_view"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
