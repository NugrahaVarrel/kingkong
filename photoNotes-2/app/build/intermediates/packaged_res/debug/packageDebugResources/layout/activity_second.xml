<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".SecondActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSecond"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:title="Tambah Catatan"
        android:titleTextColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Input Judul -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:hint="Judul catatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Dummy Photo Preview -->
    <ImageView
        android:id="@+id/ivDummyPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_card"
        android:contentDescription="Dummy Photo"
        app:layout_constraintTop_toBottomOf="@id/titleInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Button Pilih Foto Dummy -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih Foto Dummy"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivDummyPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Simpan ke Room -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan Catatan"
        app:icon="@android:drawable/ic_menu_save"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPickPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
