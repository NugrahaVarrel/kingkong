+                val db = AppDatabase.getDatabase(this@SecondActivity)
+                db.noteDao().insert(note)
+
+                runOnUiThread {
+                    Toast.makeText(this@SecondActivity, "Catatan tersimpan!", Toast.LENGTH_SHORT).show()
+                    finish() // kembali ke activity sebelumnya
+                }
+            }
+        }
+    }
+}
