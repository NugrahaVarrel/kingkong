+        super.onCreate(savedInstanceState)
+        setContentView(R.layout.activity_second)
+
+        etTitle = findViewById(R.id.etTitle)
+        ivDummyPhoto = findViewById(R.id.ivDummyPhoto)
+        btnPickPhoto = findViewById(R.id.btnPickPhoto)
+        btnSaveNote = findViewById(R.id.btnSaveNote)
+
+        // Pilih foto dummy (untuk demo kita pakai 1 URI statis saja)
+        btnPickPhoto.setOnClickListener {
+            // contoh: pakai URI dari drawable
+            val uri = Uri.parse("android.resource://${packageName}/${R.drawable.ic_launcher_foreground}")
+            ivDummyPhoto.setImageURI(uri)
+            selectedUri = uri.toString()
+
+            Toast.makeText(this, "Foto dummy dipilih!", Toast.LENGTH_SHORT).show()
+        }
+
+        // Simpan ke Room
+        btnSaveNote.setOnClickListener {
+            val title = etTitle.text.toString()
