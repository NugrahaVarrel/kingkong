<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivSprite"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="Sprite Pokémon"/>

        <ImageView
            android:id="@+id/ivArtwork"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Artwork Pokémon"/>

        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height: --  |  Weight: --"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnViewArtwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Artwork Penuh"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
