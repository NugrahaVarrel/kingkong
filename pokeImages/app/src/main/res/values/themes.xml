<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme Utama -->
    <style name="Theme.PokeImages" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Warna Brand -->
        <item name="colorPrimary">@color/pokeRed</item>
        <item name="colorPrimaryDark">@color/pokeBlue</item>
        <item name="colorSecondary">@color/pokeYellow</item>

        <!-- Background default semua activity -->
        <item name="android:windowBackground">@drawable/bg_pokemon_gradient</item>

        <!-- Text default -->
        <item name="android:textColorPrimary">@color/pokeBlue</item>

        <!-- Style global -->
        <item name="buttonStyle">@style/Widget.PokeButton</item>
        <item name="editTextStyle">@style/Widget.PokeEditText</item>
    </style>

    <!-- Style tombol utama -->
    <style name="Widget.PokeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/pokeRed</item>
        <item name="android:textColor">@color/pokeWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
    </style>


    <!-- Style untuk tombol sekunder (About) -->
    <style name="Widget.PokeButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/pokeYellow</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/pokeBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Style input -->
    <style name="Widget.PokeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_poke_edittext</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/pokeBlue</item>
        <item name="android:textColorHint">@color/pokeRed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style untuk teks respons login -->
    <style name="Widget.PokeResponseText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
